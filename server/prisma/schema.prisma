generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int          @id @default(autoincrement())
  email           String       @unique
  password        String
  name            String?
  stores          StoreUser[]
  createdAt       DateTime     @default(now())
  sentInvitations Invitation[] @relation("inviter")
}

model StoreUser {
  id Int @id @default(autoincrement())

  userId Int
  user   User @relation(fields: [userId], references: [id])

  storeId Int
  store   Store @relation(fields: [storeId], references: [id])

  permissions Permission[]

  createdAt DateTime @default(now())

  @@unique([userId, storeId])
}

model Store {
  id          Int          @id @default(autoincrement())
  name        String
  currency    Currency     @default(RUB)
  storeUsers  StoreUser[]
  pavilions   Pavilion[]
  invitations Invitation[]
  staff       StoreStaff[]
  accountingRecords StoreAccountingRecord[]
  householdExpenses HouseholdExpense[]
  pavilionExpenses PavilionExpense[]
}

model StoreAccountingRecord {
  id Int @id @default(autoincrement())

  storeId Int
  store   Store @relation(fields: [storeId], references: [id], onDelete: Cascade)

  recordDate        DateTime
  bankTransferPaid  Float @default(0)
  cashbox1Paid      Float @default(0)
  cashbox2Paid      Float @default(0)
  createdAt         DateTime @default(now())

  @@index([storeId, recordDate, createdAt])
}

model StoreStaff {
  id       Int    @id @default(autoincrement())
  fullName String
  position String

  storeId Int
  store   Store @relation(fields: [storeId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([storeId, createdAt])
}

enum Currency {
  RUB
  KZT
}

model AdditionalCharge {
  id     Int    @id @default(autoincrement())
  name   String
  amount Float

  pavilionId Int
  pavilion   Pavilion @relation(fields: [pavilionId], references: [id], onDelete: Cascade)

  payments  AdditionalChargePayment[]
  createdAt DateTime                  @default(now())
}

model AdditionalChargePayment {
  id Int @id @default(autoincrement())

  additionalChargeId Int
  additionalCharge   AdditionalCharge @relation(fields: [additionalChargeId], references: [id], onDelete: Cascade)

  amountPaid Float
  paidAt     DateTime @default(now())
}

model Pavilion {
  id           Int            @id @default(autoincrement())
  number       String
  category     String?
  squareMeters Float
  pricePerSqM  Float
  status       PavilionStatus @default(AVAILABLE)
  prepaidUntil DateTime?

  tenantName      String?
  rentAmount      Float?
  utilitiesAmount Float?

  additionalCharges AdditionalCharge[]
  householdExpenses HouseholdExpense[]
  pavilionExpenses  PavilionExpense[]
  discounts         PavilionDiscount[]
  payments          Payment[]
  paymentTransactions PaymentTransaction[]
  contracts         Contract[]

  storeId Int
  store   Store @relation(fields: [storeId], references: [id])
}

model PavilionDiscount {
  id Int @id @default(autoincrement())

  pavilionId Int
  pavilion   Pavilion @relation(fields: [pavilionId], references: [id], onDelete: Cascade)

  amount   Float
  startsAt DateTime
  endsAt   DateTime?
  note     String?

  createdAt DateTime @default(now())

  @@index([pavilionId, startsAt, endsAt])
}

enum PavilionStatus {
  AVAILABLE
  RENTED
  PREPAID
}

enum PavilionExpenseType {
  SALARIES
  PAYROLL_TAX
  PROFIT_TAX
  DIVIDENDS
  BANK_SERVICES
  VAT
  LAND_RENT
  OTHER
}

enum PavilionExpenseStatus {
  UNPAID
  PAID
}

model PavilionExpense {
  id     Int                @id @default(autoincrement())
  type   PavilionExpenseType
  status PavilionExpenseStatus @default(UNPAID)
  amount Float
  note   String?

  storeId Int?
  store   Store? @relation(fields: [storeId], references: [id], onDelete: Cascade)
  pavilionId Int?
  pavilion   Pavilion? @relation(fields: [pavilionId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([storeId, type, createdAt])
  @@index([pavilionId, type, createdAt])
}

model HouseholdExpense {
  id       Int    @id @default(autoincrement())
  name     String
  amount   Float

  storeId Int?
  store   Store? @relation(fields: [storeId], references: [id], onDelete: Cascade)
  pavilionId Int?
  pavilion   Pavilion? @relation(fields: [pavilionId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([storeId, createdAt])
  @@index([pavilionId, createdAt])
}

model Payment {
  id            Int      @id @default(autoincrement())
  pavilionId    Int
  pavilion      Pavilion @relation(fields: [pavilionId], references: [id], onDelete: Cascade)
  period        DateTime
  rentPaid      Float? // actual amount paid for rent
  utilitiesPaid Float? // actual amount paid for utilities
  bankTransferPaid Float @default(0)
  cashbox1Paid  Float @default(0)
  cashbox2Paid  Float @default(0)
  transactions  PaymentTransaction[]
  createdAt     DateTime @default(now())

  @@unique([pavilionId, period])
}

model Contract {
  id       Int    @id @default(autoincrement())
  fileName String
  filePath String
  fileType String

  pavilionId Int
  pavilion   Pavilion @relation(fields: [pavilionId], references: [id], onDelete: Cascade)

  uploadedAt DateTime @default(now())
}

model PaymentTransaction {
  id               Int      @id @default(autoincrement())
  pavilionId       Int
  pavilion         Pavilion @relation(fields: [pavilionId], references: [id], onDelete: Cascade)
  paymentId        Int?
  payment          Payment? @relation(fields: [paymentId], references: [id], onDelete: SetNull)
  period           DateTime
  rentPaid         Float @default(0)
  utilitiesPaid    Float @default(0)
  bankTransferPaid Float @default(0)
  cashbox1Paid     Float @default(0)
  cashbox2Paid     Float @default(0)
  createdAt        DateTime @default(now())

  @@index([pavilionId, period, createdAt])
}

model Invitation {
  id        Int              @id @default(autoincrement())
  email     String
  storeId   Int
  token     String           @unique
  invitedBy Int // user who sent the invite
  expiresAt DateTime
  status    InvitationStatus @default(PENDING)

  store   Store @relation(fields: [storeId], references: [id])
  inviter User  @relation(fields: [invitedBy], references: [id], name: "inviter")

  createdAt DateTime @default(now())

  @@unique([email, storeId]) // Prevents multiple active invites for same email+store
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  EXPIRED
  CANCELLED
}

enum Role {
  ADMIN
  USER
}

enum Permission {
  VIEW_PAVILIONS
  CREATE_PAVILIONS
  EDIT_PAVILIONS
  DELETE_PAVILIONS

  VIEW_PAYMENTS
  CREATE_PAYMENTS
  EDIT_PAYMENTS
  CALCULATE_PAYMENTS

  VIEW_CHARGES
  CREATE_CHARGES
  EDIT_CHARGES
  DELETE_CHARGES

  VIEW_CONTRACTS
  UPLOAD_CONTRACTS
  DELETE_CONTRACTS

  INVITE_USERS
  ASSIGN_PERMISSIONS
}
